                "arguments": [
                    "str:AgentOne",
                    "str:https://uri1.com",
                    "str:pubkey1"
                ],
                "gasLimit": "10,000,000",
                "gasPrice": "0"
            },
            "expect": {
                "status": "0"
            }
        },
        {
            "step": "scCall",
            "txId": "set-metadata-1",
            "tx": {
                "from": "address:agent1",
                "to": "sc:identity",
