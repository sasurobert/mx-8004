                "arguments": [
                    "str:AgentNFT",
                    "str:AGENT"
                ],
                "gasLimit": "60,000,000",
                "value": "50,000,000,000,000,000",
                "gasPrice": "0"
            },
            "expect": {
                "status": "0"
