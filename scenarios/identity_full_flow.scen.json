                "gasPrice": "0"
            },
            "expect": {
                "status": "0"
            }
        },
        {
            "step": "scCall",
            "txId": "final-view-agent",
            "tx": {
                "from": "address:owner",
                "to": "sc:identity",
                "function": "get_agent",
                "arguments": [
                    "u64:1"
                ],
                "gasLimit": "5,000,000",
                "gasPrice": "0"
